@{
ViewData["Title"] = "Création d'un ticket";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">

    <form action="/api/ticket/" method="post">

        <!-- Nom du ticket -->
        <div class="mb-3">
            <label for="ticketTitle" class="form-label">Titre du ticket</label>
            <input type="text" class="form-control" id="ticketTitle" name="ticketTitle" required>
        </div>

        <!-- Description du ticket -->
        <div class="mb-3">
            <label for="ticketDescription" class="form-label">Description</label>
            <textarea class="form-control" id="ticketDescription" name="ticketDescription" rows="4" required></textarea>
        </div>

        <!-- Priorité du ticket -->
        <div class="mb-3">
            <label for="ticketPriority" class="form-label">Priorité</label>
            <select class="form-select" id="ticketPriority" name="ticketPriority" required>
                <option value="low">Basse</option>
                <option value="medium">Moyenne</option>
                <option value="high">Haute</option>
            </select>
        </div>

        <!-- Email du créateur -->
        <div class="mb-3">
            <label for="ticketEmail" class="form-label">Votre Email</label>
            <input type="email" class="form-control" id="ticketEmail" name="ticketEmail" required>
        </div>

        <!-- Bouton de soumission -->
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Créer le ticket</button>
        </div>

    </form>

</div>
